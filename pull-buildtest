# warning: some hard coded paths here

# build-and-test part of a pull request

echo "Doing build and test cycle..."

JFLAG=-j$(nproc)

# test one build from clean, at least:
make -C build/alldbg clean
make -C build/all $JFLAG
make -C build/alldbg $JFLAG
make -C build/w32 $JFLAG
make -C build/clang $JFLAG
make -C build/all-linux-static $JFLAG
make -C build/all check
make -C build/alldbg check
make -C build/clang check
make -C build/all-linux-static check
make -C ~/linaro/linux-user-test-0.3/ test
echo "OK, done."
